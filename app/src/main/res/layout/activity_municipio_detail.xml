<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".municipioDetail">

    <ImageView
        android:id="@+id/imagenMunicipioDetail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/gachas" />


    <FrameLayout
        android:id="@+id/fragmentDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigationDetail"
        android:layout_below="@id/imagenMunicipioDetail" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/yellowDark"
        app:menu="@menu/menu_municipio" />
</RelativeLayout>