<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardMunicipioItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagenMunicipioItem"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gachas" />

            <TextView
                android:id="@+id/nombreMunicipioItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/crimsontextbold"
                android:justificationMode="inter_word"
                android:text="@string/municipioNameItem"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginVertical="5dp"
                android:background="@color/divider"></LinearLayout>

            <TextView
                android:id="@+id/descripcionMunicipioItem"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="@font/worksansmedium"
                android:gravity="top|center"
                android:justificationMode="inter_word"
                android:text="@string/descripcionMunicipio"
                android:textColor="@color/textDescripctio" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>